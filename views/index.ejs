<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <script src="socket/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css" >
    <script src="js/bootstrap.min.js"></script>
    <title>주차장 관리 GUI</title>
</head>
<body>
<style>
.h5, h5{
    margin:30px 0 15px 0;
    text-align: center;
}
.container{
    text-align: center;
}
.col-8{
    margin: 0 auto;;
}
.table{
    text-align: center;
}
</style>
    <div class="container">
        <img src="img/jumbo.png">
        <div class="row" >
            
          <div class="col-8">
              <div id="park_check">
            <img  src="img/parking_empty.png" style="width:730px">
            </div>
            <h5>누적 주차 기록</h5>
            <table class="table table-striped table-sm table-hover" >
                <thead>
                    <tr>
                        <th>번호</th>
                        <th>주차장 이름</th>
                        <th>주차 상태</th>
                        <th>날짜</th>
                    </tr>
                </thead>
                
                <tbody id="contents">
                    
                </tbody>                                   
            </table>
        </div>
    </div>
</div>
              
<script>
    /* DB 에서 받은 값을 1초에 한번씩 페이지에서 갱신 */
    /* Backend 에서 fronend 로 실시간으로 DB 변화량을 표기 하기 위해 ajax 통신 */
    setInterval(intervalFunc, 1000);
    function intervalFunc() {
    var html_code = "";
    var no_data = "";       // 순번 값         ex. 28
    var name_data = "";     // 주차장 이름 값   ex. 제 1 주차장
    var parking_data = "";  // 현재 주차 여부   ex. 1
    var date_data = "";     // 날짜 값         ex. 2020-11-15 09:00:00
    var car_check = "";
    $.ajax({
        url:'/index',
        async:true,
        type: 'POST',
        dataType:'json',
    success:function(msg){
      $('tbody#contents').empty();
      $('div#park_check').empty();
      for(var i = 0 ; i < msg.message1.length ; i++){ 
        no_data = String(msg.message1[i].no);
        name_data = String(msg.message1[i].name);
        
        /* 값이 1이면 "차량 존재", 0이면 "차량 없음" 으로 표기 */
        /* 값이 1이면 주차되어있는 이미지 표기, 0이면 비어있는 이미지 표기 */

        if(msg.message1[i].parking == 1){
            parking_data = '<img src="img/full_icon.png" style="width:20px">' + ' &nbsp; 차량 존재';
            if(msg.message1[0].parking == 1){
                car_check = '<img src="img/parking_full.png" style="width:730px">';
            }else{
                car_check = '<img src="img/parking_empty.png" style="width:730px">';
            }  
                     
        }else{
            parking_data = '<img src="img/empty_icon.png" style="width:20px">' +  ' &nbsp; 차량 없음';
            if(msg.message1[0].parking == 1){
                car_check = '<img src="img/parking_full.png" style="width:730px">';
            }else{
                car_check = '<img src="img/parking_empty.png" style="width:730px">';
            }
        }
        
        date_data = String(msg.message1[i].date);
        if(i == 0){
            html_code += '<tr><td><img src="img/now_icon.png" style="position:absolute;left:-100px">'+no_data+'</td><td>'+name_data+'</td><td>'+parking_data+'</td><td>'+date_data+'</td></tr>';
        }else{
            html_code += '<tr><td>'+no_data+'</td><td>'+name_data+'</td><td>'+parking_data+'</td><td>'+date_data+'</td></tr>';
        }
        
      }
      document.getElementById("contents").innerHTML = html_code;      // html_code 변수 내용을 id가 contents 에 표기 
      document.getElementById("park_check").innerHTML = car_check;    // car_check 변수 내용을 id가 park_check 에 표기

      html_code = "";
      car_check = "";
    },
    error:function(err){
      alert("보내기 실패 "  + JSON.stringify(err));
    }
    });
    
    console.log(no_data + " / " + name_data);
}    

</script>

</body>
</html>